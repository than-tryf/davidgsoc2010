<html><head><title>David Mini CMS</title><%load("header.esp");%><script type="text/javascript">jQuery(document).ready(function() {    $("a.email").click(function () {        $('#email-form').dialog('open');    });    $("#email-form").dialog({        autoOpen: false,        height: 300,        width: 350,        modal: true,        buttons: {                'Send email': function() {                    var from = $("#from").val();                    var to = $("#to").val();                    var subject = $("#subject").val();                    var text = $("#id").val();                    $.ajax({   			type: "POST",   			url: "/content/david/",   			data: ":operation=email&notify.email.from="+from+"&notify.email.to="+to+"&notify.email.subject="+subject+"&notify.email.text="+text,   			success: function(msg){                            $(this).dialog('close');   			},                        error: function(msg){                            alert(msg);                            $(this).dialog('close');                        }                    });                    $(this).dialog('close');                },                Cancel: function() {                        $(this).dialog('close');                }        },        close: function() {        }    });});</script></head><body><div id="email-form" title="Send this link by email">	<p class="validateTips">All form fields are required.</p>	<form>	<fieldset>		<label for="name">Your email</label><br/>		<input type="text" name="from" id="from" class="text ui-widget-content ui-corner-all" /><br/>		<label for="email">Your Friend Email</label><br/>		<input type="text" name="to" id="to" value="" class="text ui-widget-content ui-corner-all" />		<input type="hidden" name="subject" id="subject" value="Seen on David Mini CMS"/>                <input type="hidden" name="id" id="id" value="<%= currentNode.getPath() %>.article"/>        </fieldset>	</form></div><div id="lCenter">	<div id="desktop">		<%		load("menu.esp");		%>		<div id="contentPanel" class="centralPanel">			<h3>Post</h3>			<div>                                <a id="<%= currentNode.getPath() %>" class="email" href="#"><img src='/libs/images/email.gif'/></a>  <a href="<%= currentNode.getPath() %>.pdf"><img alt="Get pdf" src="/libs/images/pdf-icon.png"></a><br/>				<h2><%=currentNode.title ? currentNode.title : ""%></h2>					<p><%=currentNode.text ? currentNode.text : ""%></p>	          							</div>		    </div>	</div></div></body></html>				